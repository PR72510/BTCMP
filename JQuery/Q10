<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Q10</title>
    <script type = "text/javascript"
        src = "https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js">
     </script>
     <script type="text/javascript">
       var v1 = "<br><a>Line1</a><br>"
       var v2 = "<a>Line2</a><br>"
       var v3 = "<a>Line3</a>"
       $(document).ready(function(){
         $("#n1").hover(function(){
           $("#n1").append(v1,v2,v3)
         }, function(){
           $("a").remove()
         });
       });

     </script>
  </head>
  <body>
    <h3>Dropdown on Hover</h3><br>
    <div id="n1">
    <button type="button" id="new">Menu</button><br>
    </div>



  </body>
